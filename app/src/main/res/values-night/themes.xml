<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminderApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/textPrimary</item>
        <!-- Error color. -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Floating action button color. -->
        <item name="colorAccent">@color/accentColor</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
